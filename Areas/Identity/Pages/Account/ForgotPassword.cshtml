@page
@using RSCAnderlechtF.Models;
@model ForgotPasswordModel
@inject LanguageService language

@{
    ViewData["Title"] = @language.Getkey("forgot your password?");
}


<style>
    body {
        background-color: #4C2484;
    }

    h2, h2, p {
        color: white;
    }

    label {
        color: #4C2484;
    }

    .custom-button {
        background-color: white;
        color: #4C2484;
        width: 100%;
        padding: 10px 20px;
        font-size: 18px;
        border: none;
    }

    a {
        color: white;
    }

    .form-floating {
        margin-bottom: 20px;
    }
</style>

<h1>@ViewData["Title"]</h1>
<h2>@language.Getkey("Enter your email")</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete=@language.Getkey("Username") aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
         <button type="submit" class="custom-button">@language.Getkey("Reset password")</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
