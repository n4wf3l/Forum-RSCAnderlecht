@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject LanguageService language
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RSCAnderlechtF</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RSCAnderlechtF.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.4.3/css/flag-icon.min.css" />
    <!-- jQuery library -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


</head>
<body>
    <style>
.navbar-nav .nav-link {
  color: white;
}

nav a:hover {
  color: white;
}
#nav a:hover {
  color: white;
}

.navbar-nav .nav-link:hover {
  background-color: #4C2484;
  color: white;
  border-radius:20px;
}
    </style>

    <header>
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
  <div class="container-fluid">
          <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
              <img src="/RSC_Anderlecht_logo.png" alt="Logo" width="50px">
              RSCA Forum
          </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">

        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@language.Getkey("news feed")</a>
        </li>
    
                @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin") || SignInManager.IsSignedIn(User) && User.IsInRole("User")){
        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PostManagement" asp-action="MyPosts">@language.Getkey("my posts")</a>
                                
        </li>
                        }
         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@language.Getkey("privacy")</a>
        </li>

        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="UserManagement" asp-action="Index">@language.Getkey("User Management")</a>
          </li>
        }

       @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        { 
          <li class="nav-item"> 
                            <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index">@language.Getkey("Role Management")</a> 
           </li> 
        }
      </ul>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @language.Getkey("language") ⚽
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US">
                                <i class="flag-icon flag-icon-gb"></i> English
                            </a>
                            <a class="dropdown-item" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="fr-BE">
                                <i class="flag-icon flag-icon-fr"></i> Français
                            </a>
                            <a class="dropdown-item" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="nl-BE">
                                <i class="flag-icon flag-icon-nl"></i> Nederlands
                            </a>
                        </div>
                    </li>
      <partial name="_LoginPartial" />
    </div>
  </div>
 </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - RSCAnderlechtF - <a asp-area="" asp-controller="Home" asp-action="Privacy">@language.Getkey("privacy")</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
